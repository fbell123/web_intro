<head>
  <link rel="stylesheet" href="reset.css" type="text/css" />
  <link rel="stylesheet" href="css_styles/play.css"/>
</head>


<div class="container">
  <div class="left">
    <%= @game.players[0].name %>
    <p class="hitpoints"> HITPOINTS = <%= @game.players[0].hitpoints %>  </p>
    <img src="http://i812.photobucket.com/albums/zz50/frogsplash46/animals_dancingRainbowMonkey.gif">
  </div>
  <div class="middle">
    vs
    <form action="/attack" method="get">
      <button type="submit"> Attack </button>
    </form>
  </div>
  <div class="right">
    <%= @game.players[1].name %>
    <p class="hitpoints"> HITPOINTS = <%= @game.players[1].hitpoints %> </p>
    <img src="http://i.imgur.com/SXJFqMc.gif">
  </div>
  <p class="middle"> <%= @game.players[@game.turn[0]].name %>'s turn </p>
  <% unless @game.players[0].hitpoints == 100 && @game.players[1].hitpoints == 100 %>
    <p class="attack-text"> <%= @game.players[@game.turn[1]].name %> attacked <%= @game.players[@game.turn[0]].name %>!</p>
    <% end %>
    <% if @game.players[@game.turn[1]].hitpoints <= 0 %>
    <%= @game.players[1].name %> has lost the battle!
    <% end %> </p>
</div>
